<UserControl x:Class="MiddelbyReolmarked.Views.RentalAgreementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiddelbyReolmarked.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Overskrift -->
            <RowDefinition Height="Auto"/>
            <!-- Navn -->
            <RowDefinition Height="Auto"/>
            <!-- Telefon -->
            <RowDefinition Height="Auto"/>
            <!-- E-mail -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Overskrift -->
        <TextBlock Text="Lejeaftale" FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="3" 
                   Margin="30,0,0,20" HorizontalAlignment="Center"/>
        <TextBlock Text="Rediger lejeroplysninger" FontSize="12" FontWeight="Light"  Grid.Row="0" Grid.ColumnSpan="3" Margin="50,40,0,20" HorizontalAlignment="Center"/>

        <!-- Navn -->
        <Label Content="Kunde:" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Width="100"/>
        <ComboBox Grid.Row="1" Grid.Column="2" Margin="5,5" Width="240"
          Name="CustomerComboBox"
          ItemsSource="{Binding Customers}"
          SelectedItem="{Binding SelectedCustomer, UpdateSourceTrigger=PropertyChanged}"
          DisplayMemberPath="CustomerName"/>


        <!-- Telefon -->
        <Label Content="Startdato:" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Width="100"/>
        <TextBox Grid.Row="2" Grid.Column="2" Margin="5,5" Width="240"
                 Text="{Binding CustomerPhone, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- E-mail -->
        <Label Content="Slutdato:" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Width="100"/>
        <TextBox Grid.Row="3" Grid.Column="2" Margin="5,5" Width="240"
                 Text="{Binding CustomerEmail, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Gem" Width="90" Height="26" Margin="15,0" Command="{Binding SaveCommand}"/>
            <Button Content="Slet" Width="90" Height="26" Margin="10,0" Command="{Binding DeleteCommand}"/>
        </StackPanel>

    </Grid>
</UserControl>
