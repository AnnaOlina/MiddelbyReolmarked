<Window x:Class="MiddelbyReolmarked.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Middelby Reolmarked" Height="600" Width="900">
    <DockPanel>
        <!-- Navigation menu -->
        <StackPanel DockPanel.Dock="Left" Width="150" Background="#EEE">
            <Button Content="Udlejning" Command="{Binding ShowRentalAgreementViewCommand}" Margin="5"/>
            <Button Content="Ledige Reoler" Command="{Binding ShowAvailableRacksViewCommand}" Margin="5"/>
            <Button Content="Reoler" Command="{Binding ShowRackListViewCommand}" Margin="5"/>
            <Button Content="Lejere" Command="{Binding ShowCustomerListViewCommand}" Margin="5"/>
        </StackPanel>
        <!-- Content area -->
        <ContentControl Content="{Binding CurrentView}" />
    </DockPanel>
</Window>
