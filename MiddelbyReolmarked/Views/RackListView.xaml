<UserControl x:Class="MiddelbyReolmarked.Views.RackListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ListView ItemsSource="{Binding Racks}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Reolnummer" DisplayMemberBinding="{Binding RackNumber}"/>
                <GridViewColumn Header="Antal hylder" DisplayMemberBinding="{Binding AmountShelves}"/>
                <GridViewColumn Header="Med bøjlestang" DisplayMemberBinding="{Binding HangerBar}"/>
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
