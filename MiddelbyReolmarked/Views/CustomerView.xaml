<UserControl x:Class="MiddelbyReolmarked.Views.CustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid Margin="10" Background="Beige">
        <TextBlock HorizontalAlignment="Left" Margin="220,65,0,0" TextWrapping="Wrap" Text="Opret Lejer" VerticalAlignment="Top" Height="35" Width="150"/>
        <Label Content="NAVN" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,150,0,0"/>
        <Label Content="TELEFON" HorizontalAlignment="Left" Margin="5,175,0,0" VerticalAlignment="Top"/>
        <Label Content="EMAIL" HorizontalAlignment="Left" Margin="5,205,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="70,150,0,0" TextWrapping="Wrap" Text="{Binding CustomerName}" VerticalAlignment="Top" Width="240"/>
        <TextBox HorizontalAlignment="Left" Margin="70,0,0,0" TextWrapping="Wrap" Text="{Binding CustomerPhone}" VerticalAlignment="Center" Width="240"/>
        <TextBox HorizontalAlignment="Left" Margin="70,210,0,0" TextWrapping="Wrap" Text="{Binding CustomerEmail}" VerticalAlignment="Top" Width="240"/>

        <!-- Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Gem" Width="90"  Height="26" Margin="50,300,10,0"/>
            <Button Content="Slet" Width="90" Height="26" Margin="0,300,10,0"/>
            <!-- Tilfoej Command bindings og evt. inputfelter efter behov -->
        </StackPanel>

    </Grid>
</UserControl>
