<UserControl x:Class="MiddelbyReolmarked.Views.CustomerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ListView ItemsSource="{Binding Customers}" MouseDoubleClick="OnDoubleClick">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Navn" DisplayMemberBinding="{Binding CustomerName}" />
                <GridViewColumn Header="Telefon" DisplayMemberBinding="{Binding CustomerPhone}" />
                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding CustomerEmail}" />
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>