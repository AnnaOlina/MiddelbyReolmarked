<UserControl x:Class="MiddelbyReolmarked.Views.RackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiddelbyReolmarked.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20,11,20,29" Background="Beige">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Overskrift -->
            <RowDefinition Height="Auto"/>
            <!-- Navn -->
            <RowDefinition Height="Auto"/>
            <!-- Telefon -->
            <RowDefinition Height="Auto"/>
            <!-- E-mail -->
            <RowDefinition Height="Auto"/>
            <!-- Actions -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Overskrift -->
        <TextBlock Text="Reol" FontSize="25" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="3" 
                   Margin="30,0,0,20" HorizontalAlignment="Center"/>
        <TextBlock Text="Rediger eller opret reol" FontSize="12" FontWeight="Light"  Grid.Row="0" Grid.ColumnSpan="3" Margin="50,40,0,20" HorizontalAlignment="Center"/>

        <!-- Navn -->
        <Label Content="Reolnummer:" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Width="100"/>
        <TextBox Grid.Row="1" Grid.Column="2" Margin="5,5" Width="240"
                 Text="{Binding RackNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Telefon -->
        <Label Content="Reoltype:" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,5" Width="100"/>
        <ComboBox Grid.Row="2" Grid.Column="2" Margin="5,5" Width="240"
                  Name="RackTypeComboBox"
                  ItemsSource="{Binding RackTypeOptions}"
                  SelectedItem="{Binding SelectedRackType, UpdateSourceTrigger=PropertyChanged}"
                  DisplayMemberPath="DisplayName"/>


        <!-- Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="70,20,0,0">
            <Button Content="Gem" Width="90" Height="26" Margin="30,0" Command="{Binding SaveCommand}"/>
            <Button Content="Slet" Width="90" Height="26" Margin="10,0" Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
